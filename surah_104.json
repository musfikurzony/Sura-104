{
  "surahNumber": 104,
  "nameAr": "سورة الهمزة",
  "nameBn": "সূরা আল-হুমাযাহ",
  "hasBismillah": true,
  "bismillah": {
    "arabic": "بِسْمِ اللهِ الرَّحْمَنِ الرَّحِيمِ",
    "bangla": "পরম করুণাময় অশেষ দয়াবান আল্লাহর নামে (শুরু করছি)।"
  },
  "ayahs": [
    {
      "ayahNumber": 1,
      "arabic": "وَيْلٌ لِّكُلِّ هُمَزَةٍ لُّمَزَةٍ",
      "bangla": "দুর্ভোগ তাদের জন্য যারা পশ্চাতে ও সম্মুখে লোকের নিন্দা করে!",
      "words": []
    },
    {
      "ayahNumber": 2,
      "arabic": "الَّذِي جَمَعَ مَالًا وَعَدَّدَهُ",
      "bangla": "যে অর্থ সঞ্চয় করে এবং বারবার তা গণনা করে।",
      "words": []
    },
    {
      "ayahNumber": 3,
      "arabic": "يَحْسَبُ أَنَّ مَالَهُ أَخْلَدَهُ",
      "bangla": "সে ধারণা করে যে তার সম্পদ তাকে চিরজীবী করে রাখবে।",
      "words": []
    },
    {
      "ayahNumber": 4,
      "arabic": "كَلَّا لَيُنبَذَنَّ فِي الْحُطَمَةِ",
      "bangla": "কক্ষনো না! সে অবশ্যই হুতামাহ্ (চূর্ণ-বিচূর্ণকারী আগুন)-এ নিক্ষিপ্ত হবে।",
      "words": []
    },
    {
      "ayahNumber": 5,
      "arabic": "وَمَا أَدْرَاكَ مَا الْحُطَمَةُ",
      "bangla": "আর আপনি কি জানেন, হুতামাহ্ কী?",
      "words": []
    },
    {
      "ayahNumber": 6,
      "arabic": "نَارُ اللَّهِ الْمُوقَدَةُ",
      "bangla": "এটা আল্লাহর প্রজ্বলিত অগ্নি।",
      "words": []
    },
    {
      "ayahNumber": 7,
      "arabic": "الَّتِي تَطَّلِعُ عَلَى الْأَفْئِدَةِ",
      "bangla": "যা হৃদয় পর্যন্ত পৌঁছে যাবে।",
      "words": []
    },
    {
      "ayahNumber": 8,
      "arabic": "إِنَّهَا عَلَيْهِم مُّؤْصَدَةٌ",
      "bangla": "তা তাদেরকে বেষ্টন করে রাখা হবে।",
      "words": []
    },
    {
      "ayahNumber": 9,
      "arabic": "فِي عَمَدٍ مُّمَدَّدَةٍ",
      "bangla": "দীর্ঘায়িত স্তম্ভসমূহে।",
      "words": []
    }
  ],
  "translations": {
    "osmani": {
      "key": "osmani",
      "label": "তাফসীরে ওসমানী",
      "ayahs": [
        {
          "ayahNumber": 1,
          "text": "দুর্ভোগ তাদের জন্য যারা পশ্চাতে ও সম্মুখে লোকের নিন্দা করে!"
        },
        {
          "ayahNumber": 2,
          "text": "যে অর্থ সঞ্চয় করে এবং বারবার তা গণনা করে।"
        },
        {
          "ayahNumber": 3,
          "text": "সে ধারণা করে যে তার সম্পদ তাকে চিরজীবী করে রাখবে।"
        },
        {
          "ayahNumber": 4,
          "text": "কক্ষনো না! সে অবশ্যই হুতামাহ্ (চূর্ণ-বিচূর্ণকারী আগুন)-এ নিক্ষিপ্ত হবে।"
        },
        {
          "ayahNumber": 5,
          "text": "আর আপনি কি জানেন, হুতামাহ্ কী?"
        },
        {
          "ayahNumber": 6,
          "text": "এটা আল্লাহর প্রজ্বলিত অগ্নি।"
        },
        {
          "ayahNumber": 7,
          "text": "যা হৃদয় পর্যন্ত পৌঁছে যাবে।"
        },
        {
          "ayahNumber": 8,
          "text": "তা তাদেরকে বেষ্টন করে রাখা হবে।"
        },
        {
          "ayahNumber": 9,
          "text": "দীর্ঘায়িত স্তম্ভসমূহে।"
        }
      ]
    },
    "tawjih": {
      "key": "tawjih",
      "label": "তাওযীহুল কুরআন",
      "ayahs": [
        {
          "ayahNumber": 1,
          "text": "প্রত্যেক এমন ব্যক্তির জন্য সর্বনাশ, যে (সামনাসামনি) নিন্দা করে ও (পিছনে) বদনাম করে।"
        },
        {
          "ayahNumber": 2,
          "text": "যে ধন-সম্পদ জমা করে এবং গুনে গুনে রাখে।"
        },
        {
          "ayahNumber": 3,
          "text": "সে ধারণা করে যে, তার সম্পদ তাকে চিরকাল বাঁচিয়ে রাখবে।"
        },
        {
          "ayahNumber": 4,
          "text": "কখনো না! তাকে অবশ্যই হুতামাহ্-এ নিক্ষেপ করা হবে।"
        },
        {
          "ayahNumber": 5,
          "text": "আর আপনি কী জানেন হুতামাহ্ কী?"
        },
        {
          "ayahNumber": 6,
          "text": "এটা আল্লাহর প্রজ্জ্বলিত আগুন।"
        },
        {
          "ayahNumber": 7,
          "text": "যা অন্তঃকরণ পর্যন্ত পৌঁছে যায়।"
        },
        {
          "ayahNumber": 8,
          "text": "তা তাদের উপর বন্ধ করে দেওয়া হবে।"
        },
        {
          "ayahNumber": 9,
          "text": "লম্বা লম্বা খুঁটিসমূহে।"
        }
      ]
    }
  }
}
