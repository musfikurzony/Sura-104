  "nameBn": "সূরা আল-ক্বারিআহ",
  "hasBismillah": true,
  "bismillah": {
    "arabic": "بِسْمِ اللهِ الرَّحْمَنِ الرَّحِيمِ",
    "bangla": "পরম করুণাময় অশেষ দয়াবান আল্লাহর নামে (শুরু করছি)।"
  },
  "ayahs": [
    {
      "ayahNumber": 1,
      "arabic": "الْقَارِعَةُ",
      "bangla": "মহাপ্রলয়!",
      "words": []
    },
    {
      "ayahNumber": 2,
      "arabic": "مَا الْقَارِعَةُ",
      "bangla": "সেই মহাপ্রলয় কী?",
      "words": []
    },
    {
      "ayahNumber": 3,
      "arabic": "وَمَا أَدْرَاكَ مَا الْقَارِعَةُ",
      "bangla": "আর আপনি কি জানেন সেই মহাপ্রলয় কী?",
      "words": []
    },
    {
      "ayahNumber": 4,
      "arabic": "يَوْمَ يَكُونُ النَّاسُ كَالْفَرَاشِ الْمَبْثُوثِ",
      "bangla": "সেদিন মানুষ হবে বিক্ষিপ্ত পতঙ্গের মতো।",
      "words": []
    },
    {
      "ayahNumber": 5,
      "arabic": "وَتَكُونُ الْجِبَالُ كَالْعِهْنِ الْمَنْفُوشِ",
      "bangla": "আর পর্বতমালা হবে ধুনিত রঙ্গীন পশমের মতো।",
      "words": []
    },
    {
      "ayahNumber": 6,
      "arabic": "فَأَمَّا مَنْ ثَقُلَتْ مَوَازِينُهُ",
      "bangla": "সুতরাং যার (নেক) পাল্লা ভারী হবে,",
      "words": []
    },
    {
      "ayahNumber": 7,
      "arabic": "فَهُوَ فِي عِيشَةٍ رَّاضِيَةٍ",
      "bangla": "সে এক সন্তুষ্টির জীবন লাভ করবে।",
      "words": []
    },
    {
      "ayahNumber": 8,
      "arabic": "وَأَمَّا মَنْ خَفَّتْ مَوَازِينُهُ",
      "bangla": "আর যার (নেক) পাল্লা হালকা হবে,",
      "words": []
    },
    {
      "ayahNumber": 9,
      "arabic": "فَأُمُّهُ هَاوِيَةٌ",
      "bangla": "তার ঠিকানা হবে হাওয়িয়াহ্।",
      "words": []
    },
    {
      "ayahNumber": 10,
      "arabic": "وَمَا أَدْرَاكَ مَا هِيَهْ",
      "bangla": "আর আপনি কি জানেন, তা কী?",
      "words": []
    },
    {
      "ayahNumber": 11,
      "arabic": "نَارٌ حَامِيَةٌ",
      "bangla": "তা হচ্ছে প্রজ্বলিত আগুন।",
      "words": []
    }
  ],
  "translations": {
